<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/common_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/common_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorTitle"
            android:textSize="20dp"
            tools:text="我只是一个标题而已，一个非常非常非常非常非常非常非常长的标题啦，" />

        <RelativeLayout
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_comm_type"
                android:id="@+id/common_label"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:id="@+id/common_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/colorTag"
                android:textSize="18sp"
                android:layout_toRightOf="@id/common_label"
                tools:text="福利" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/common_via"
                android:layout_marginRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:textColor="@color/colorVia"
                android:textSize="16dp"
                tools:text="via:GcsSloop" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
